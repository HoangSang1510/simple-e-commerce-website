
{{# if success}}
    <div id="successMessage" class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Success!</strong> Chỉnh sửa thành công!
    </div>
{{else}}
    <p></p>
{{/if}}





<div class = "container">
  <div class="form-row">
    <div class="col-4">
      <strong>Tên Sản Phẩm</strong>
    </div>
    <div class="col">
     <strong>Số lượng</strong>
    </div>
    <div class="col">
      <strong>Giá gốc</strong>
    </div>
    <div class="col">
      <strong>Giảm giá</strong>
    </div>
    <div class="col">    
    </div>
   </div>
   
   <hr style="height:2px;border-width:0;color:gray;background-color:gray">


    {{# each product}}
        <form method="post" action="/product/{{this._id}}/warehouse?_method=PUT">
            <div class="form-row">
                <div class="col-4">
                <input class="form-control" value="{{this.name}}" id="name" name ="name" placeholder={{this.name}}>
                </div>
                <div class="col">
                <input class="form-control" value="{{this.quantity}}" id="quantity" name ="quantity" placeholder={{this.quantity}}>
                </div>
                <div class="col">
                <input class="form-control" value="{{this.price}}" id="price" name ="price" placeholder={{this.price}}>
                </div>
                <div class="col">
                <input class="form-control" value="{{this.discount}}" id="discount" name ="discount" placeholder={{this.discount}}>
                </div>

                <div class="col">
                    <input type="hidden" value="{{this._id}}">
                    <button type="submit" class = "btn btn-default btn-block">Save</button>
                </div>
            </div>
        <br>
        </form>
    {{/each}}

</div>





<script>
  $(function() {
    setTimeout(function() {
        $("#successMessage").hide('blind', {}, 500)
    }, 3000);
});
</script>


